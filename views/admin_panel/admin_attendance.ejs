<%- include ('../sections/admin_header') %>


<%- include ('../sections/admin_create') %>

  <section id="main">
    <div class="container">
      <div class="row">

        <%- include ('../sections/admin_dashboard') %>


        <div class="col-md-9">
          <!-- Website Overview -->
          <div class="panel panel-default">
            <div class="panel-heading main-color-bg">
              <h3 class="panel-title">Users</h3>
            </div>
            <div class="panel-body">
              <br>
              <table class="table table-striped table-hover">
                <tr>
                  <th>Attendance ID</th>
                  <th>Class Name</th>
                  <th>Status</th>
                  <th>DateTime</th>
                  <th>Student ID</th>
                  <th>Course Name</th>
                  <th></th>
                </tr>
                <% attendance.forEach(function(attendance){ %>
                <tr>
                  <td><%= attendance.a_id %></td>
                  <td><%= attendance.class_name %></td>
                  <td><%= attendance.status %></td>
                  <td><%= attendance.datetime %></td>
                  <td><%= attendance.s_id %></td>
                  <td><%= attendance.course_name %></td>
                  <td> <a class="btn btn-danger" href="#">Delete</a></td>
                </tr>
                <%  }); %>
              </table>
            </div>
          </div>

        </div>
      </div>
    </div>
  </section>

  <footer id="footer">
    <p>Copyright Student Management System, &copy; 2020</p>
  </footer>

