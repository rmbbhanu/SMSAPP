<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Admin Area | Faculty</title>
  <!-- Bootstrap core CSS -->
  <link href="./mycss/bootstrap.min.css" rel="stylesheet">
  <link href="./mycss/adminstyle.css" rel="stylesheet">
  <script src="http://cdn.ckeditor.com/4.6.1/standard/ckeditor.js"></script>
</head>

<body>

  <header id="header">
    <div class="container">
      <div class="row">
        <div class="col-md-10">
          <h1><span class="glyphicon glyphicon-cog" aria-hidden="true"></span> Faculty<small>Manage Site Faculty</small>
          </h1>
        </div>
        <div class="col-md-2">
          <div class="dropdown create">
            <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown"
              aria-haspopup="true" aria-expanded="true">
              Create Content
              <span class="caret"></span>
            </button>
            <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
              <li><a type="button" data-toggle="modal" data-target="#addFaculty">Add Faculty</a></li>
              <li><a type="button" data-toggle="modal" data-target="#addStudent">Add Student</a></li>
              <li><a type="button" data-toggle="modal" data-target="#addCourse">Add Course</a></li>
              <li><a type="button" data-toggle="modal" data-target="#addDepartment">Add Department</a></li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </header>

  <section id="main">
    <div class="container">
      <div class="row">
        <div class="col-md-3">
          <div class="list-group">
            <form action="admin_index" method="GET"><a href="admin_index" class="list-group-item active main-color-bg">
                <span class="glyphicon glyphicon-cog" aria-hidden="true"></span> Dashboard
              </a></form>
            <form action="admin_pages" method="GET"><a href="admin_pages" class="list-group-item"><span
                  class="glyphicon glyphicon-list-alt" aria-hidden="true"></span> Pages <span
                  class="badge">08</span></a></form>
            <form action="admin_faculty" method="GET"><a href="admin_faculty" class="list-group-item"><span
                  class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                Faculty <span class="badge">14</span></a></form>
            <form action="admin_student" method="GET"><a href="admin_student" class="list-group-item"><span
                  class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                Student <span class="badge">15</span></a></form>
            <form action="admin_course" method="GET"><a href="admin_course" class="list-group-item"><span
                  class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                Course <span class="badge">11</span></a></form>
            <form action="admin_department" method="GET"><a href="admin_department" class="list-group-item"><span
                  class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                Department <span class="badge">04</span></a></form>
            <form action="admin_faculty_announcement" method="GET"><a href="admin_faculty_announcement"
                class="list-group-item"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                Announcements <span class="badge">09</span></a></form>
            <form action="admin_attendance" method="GET"><a href="admin_attendance" class="list-group-item"><span
                  class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                Attendance </a></form>
            <form action="index" method="GET"><a href="index" class="list-group-item"><span
                  class="glyphicon glyphicon-user" aria-hidden="true"></span> Logout</a></form>
          </div>

        </div>
        <div class="col-md-9">
          <!-- Website Overview -->
          <div class="panel panel-default">
            <div class="panel-heading main-color-bg">
              <h3 class="panel-title">Faculty</h3>
            </div>
            <div class="panel-body">
              <br>
              <table class="table table-striped table-hover">
                <tr>                  
                  <th>Faculty ID</th>
                  <th>Faculty Name</th>
                  <th>Email ID</th>
                  <th>Department</th>
                  <th></th>
                </tr>
                <% faculties.forEach(function(faculties){ %>
                <tr>
                  <td><%= faculties.f_id %></td>
                  <td><%= faculties.faculty_name %></td>
                  <td><%= faculties.email_id %></td>
                  <td><%= faculties.department %></td>
                  <td> <a class="btn btn-danger" href="#">Delete</a></td>
                </tr>
                <%  }); %>
              </table>
            </div>
          </div>

        </div>
      </div>
    </div>
  </section>

  <footer id="footer">
    <p>Copyright Student Management System, &copy; 2020</p>
  </footer>

  <!-- Modals -->

  <!-- Add faculty -->
  <div class="modal fade" id="addFaculty" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <form action="/add_faculty_redirect" method="post" enctype="multipart/form-data">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                aria-hidden="true">&times;</span></button>
            <h4 class="modal-title" id="myModalLabel">Add Faculty</h4>
          </div>
          <div class="modal-body">
            <div class="form-group">
              <label>Faculty Id</label>
              <input type="text" name="faculty_id" class="form-control" placeholder="Please Enter Faculty id...">
            </div>
            <div class="form-group">
              <label>Faculty Name</label>
              <input type="text" name="faculty_name" class="form-control" placeholder="Please Enter Faculty Name...">
            </div>
            <div class="form-group">
              <label>Faculty E-mail Address</label>
              <input type="text" name="email_id" class="form-control"
                placeholder="Please Enter Faculty E-mail Address...">
            </div>
            <div class="form-group">
              <label>Faculty Department</label>
              <input type="text" name="department" class="form-control"
                placeholder="Please Enter Faculty Department...">
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-primary">Save changes</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <!-- Add Student -->
  <div class="modal fade" id="addStudent" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <form action="/add_student_redirect" method="post" enctype="multipart/form-data">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                aria-hidden="true">&times;</span></button>
            <h4 class="modal-title" id="myModalLabel">Add Student</h4>
          </div>
          <div class="modal-body">
            <div class="form-group">
              <label>Student ID</label>
              <input type="text" name="s_id" class="form-control" placeholder="Please Enter Student ID...">
            </div>
            <div class="form-group">
              <label>Student First Name</label>
              <input type="text" name="fname" class="form-control" placeholder="Please Enter Student First Name...">
            </div>
            <div class="form-group">
              <label>Student last Name</label>
              <input type="text" name="lname" class="form-control" placeholder="Please Enter Student last Name...">
            </div>
            <div class="form-group">
              <label>Student Roll Number</label>
              <input type="text" name="roll_no" class="form-control" placeholder="Please Enter Student Roll Number...">
            </div>
            <div class="form-group">
              <label>Student Class ID</label>
              <input type="text" name="class_id" class="form-control" placeholder="Please Enter Student Class ID...">
            </div>
            <div class="form-group">
              <label>Student Department</label>
              <input type="text" name="department" class="form-control"
                placeholder="Please Enter Student Department...">
            </div>
            <div class="form-group">
              <label>Student Semester</label>
              <input type="text" name="semester" class="form-control" placeholder="Please Enter Student Semester...">
            </div>
            <div class="form-group">
              <label>Student Address</label>
              <input type="text" name="address" class="form-control" placeholder="Please Enter Student Address...">
            </div>
            <div class="form-group">
              <label>Student E-mail Address</label>
              <input type="text" name="email_id" class="form-control"
                placeholder="Please Enter Student E-mail Address...">
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-primary">Save changes</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <!-- Add Courses -->
  <div class="modal fade" id="addCourse" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <form action="/add_course_redirect" method="post" enctype="multipart/form-data">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                aria-hidden="true">&times;</span></button>
            <h4 class="modal-title" id="myModalLabel">Add Course</h4>
          </div>
          <div class="modal-body">
            <div class="form-group">
              <label>Course Name</label>
              <input type="text" name="course_name" class="form-control" placeholder="Please Enter Course Name...">
            </div>
            <div class="form-group">
              <label>Faculty Name</label>
              <input type="text" name="faculty_name" class="form-control" placeholder="Please Enter Faculty Name...">
            </div>
            <div class="form-group">
              <label>Course Department</label>
              <input type="text" name="department" class="form-control" placeholder="Please Enter Course Department...">
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-primary">Save changes</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <!-- Add Department -->
  <div class="modal fade" id="addDepartment" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <form action="/add_department_redirect" method="post" enctype="multipart/form-data">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                aria-hidden="true">&times;</span></button>
            <h4 class="modal-title" id="myModalLabel">Add Department</h4>
          </div>
          <div class="modal-body">
            <div class="form-group">
              <label>Department ID</label>
              <input type="text" name="d_id" class="form-control" placeholder="Please Enter Department ID...">
            </div>
            <div class="form-group">
              <label>Department Name</label>
              <input type="text" name="department" class="form-control" placeholder="Please Enter Department Name...">
            </div>
            <div class="form-group">
              <label>Department HOD</label>
              <input type="text" name="hod" class="form-control" placeholder="Please Enter Department HOD...">
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-primary">Save changes</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <!-- Bootstrap core JavaScript
    ================================================== -->
  <!-- Placed at the end of the document so the pages load faster -->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
  <script src="./Javascript/bootstrap.min.js"></script>
</body>

</html>