<%- include ('../sections/admin_header') %>


  <%- include ('../sections/admin_create') %>


  <section id="main">
    <div class="container">
      <div class="row">
        
        <%- include ('../sections/admin_dashboard') %>


        <div class="col-md-9">
          <!-- Website Overview -->
          <div class="panel panel-default">
            <div class="panel-heading main-color-bg">
              <h3 class="panel-title">Faculty</h3>
            </div>
            <div class="panel-body">
              <br>
              <table class="table table-striped table-hover">
                <tr>                  
                  <th>Faculty ID</th>
                  <th>Faculty Name</th>
                  <th>Email ID</th>
                  <th>Department</th>
                  <th></th>
                </tr>
                <% faculties.forEach(function(faculties){ %>
                <tr>
                  <td><%= faculties.f_id %></td>
                  <td><%= faculties.faculty_name %></td>
                  <td><%= faculties.email_id %></td>
                  <td><%= faculties.department %></td>
                  <td> <a class="btn btn-danger" href="#">Delete</a></td>
                </tr>
                <%  }); %>
              </table>
            </div>
          </div>

        </div>
      </div>
    </div>
  </section>

  <footer id="footer">
    <p>Copyright Student Management System, &copy; 2020</p>
  </footer>

