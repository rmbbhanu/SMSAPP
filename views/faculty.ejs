  <button class="button" id="myBtn1" style="background-color: #0019ff;"><span>Announcement </span></button>

  <!-- <input type="button" value="Open Chatbot" href=""" /> -->




  <div id="myModal" class="modal">
    <!-- Modal content for Assignment-->
    <div class="modal-content">
      <div class="modal-header">
        <span class="close">&times;</span>
        <h2 align="center" style="padding: 5px;">Assignment Form</h2>
      </div>
      <div class="modal-body">
        <p>Click on the "Choose File" button to upload a Asssignment file:</p>

        <form id="uploadForm" action="/faculty_assignment" method="post" enctype="multipart/form-data">
          <div class="form-group">
            <label for="sel1">Select Class:</label>
            <select class="form-control" id="sel1" name="deptclass">
              <option value="BE Comps">BE Comps</option>
              <option value="BE IT">BE IT</option>
              <option value="BE EXTC">BE EXTC</option>
              <option value="BE ETRX">BE ETRX</option>
            </select>
          </div>

          <div class="form-group">
            <label for="exampleFormControlFile1">Please upload the Assignment below: </label>
            <input type="file" class="form-control-file" name="uploaded_image" accept="" />
          </div>

          <!-- <input type="file" id="myFile" name="userPhoto"> -->
          <input type="submit" value="Upload Image" name="submit" style="margin-top: 20px;" onclick="geekConfirm()">
        </form>
      </div>
    </div>
  </div>

  <div id="myModal1" class="modal">
    <!-- Modal content for Notification-->
    <div class="modal-content">
      <div class="modal-header">
        <span class="close">&times;</span>
        <h2 align="center" style="padding: 5px;">Announcement Section</h2>
      </div>
      <div class="modal-body">

        <form id="uploadForm" action="/faculty_redirect" method="post" enctype="multipart/form-data">

          <div class="form-group">
            <label for="Sender Name">Sender's Name:</label>
            <input type="sname" class="form-control" id="s_name" placeholder="Your Name" name="s_name">
          </div>

          <div class="form-group">
            <label for="sel1">Select Class:</label>
            <select class="form-control" id="sel1" name="dept_announce">
              <option value="BE Comps">BE Comps</option>
              <option value="BE IT">BE IT</option>
              <option value="BE EXTC">BE EXTC</option>
              <option value="BE ETRX">BE ETRX</option>
            </select>
          </div>

          <div class="form-group">
            <label for="description">Description:</label>
            <textarea class="form-control" name="announce_description" rows="5" id="description"></textarea>
          </div>

          <input type="submit" value="Send Notice" name="submit" style="margin-top: 20px;" onclick="geekConfirm()">


        </form>
      </div>
    </div>
  </div>



  <script>
    // Get the modal
    var modal = document.getElementById("myModal");
    var modal1 = document.getElementById("myModal1");

    // Get the button that opens the modal
    var btn = document.getElementById("myBtn");
    var btn1 = document.getElementById("myBtn1");

    // Get the <span> element that closes the modal
    var span = document.getElementsByClassName("close")[0];

    // When the user clicks the button, open the modal 
    btn.onclick = function () {
      modal.style.display = "block";
    }
    btn1.onclick = function () {
      modal1.style.display = "block";
    }

    // When the user clicks on <span> (x), close the modal
    span.onclick = function () {
      modal.style.display = "none";
    }
    // // close for announcement
    // span.onclick = function () {
    //   modal1.style.display = "none";
    // }
    

    // When the user clicks anywhere outside of the modal, close it
    window.onclick = function (event) {
      if (event.target == modal) {
        modal.style.display = "none";
      }
    }
    window.onclick = function (event) {
      if (event.target == modal1) {
        modal1.style.display = "none";
      }
    }
  </script>


  <script>
    function geekConfirm() {
      var x;
      if (confirm("Following task has been succesfully Completed!!!") == true) {
        x = "OK pressed!";
      } else {
        x = "Cancel!";
      }
      // document.getElementById("geek").innerHTML = x; 
    }
  </script>
